#
# IAM Policy Documents for AssumeRolePolicy
#

data "aws_iam_policy_document" "allow_assume_by_lambda" {
  statement {
    actions = [
      "sts:AssumeRole",
    ]
    principals {
      type        = "Service"
      identifiers = ["lambda.amazonaws.com"]
    }
  }
}

